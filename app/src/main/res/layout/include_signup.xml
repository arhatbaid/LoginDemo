<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_signup_header"
        android:background="@android:color/holo_red_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_marginRight="@dimen/common_padding"
            android:text="@string/registration"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_header_text"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgCross"
            android:layout_width="@dimen/img_registration_cross"
            android:layout_height="@dimen/img_registration_cross"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_padding"
            android:padding="@dimen/very_small_padding"
            android:src="@drawable/cross" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSignUp"
        android:layout_below="@+id/rlHeader"
        android:layout_marginLeft="@dimen/huge_padding"
        android:layout_marginRight="@dimen/huge_padding"
        android:gravity="center"
        android:orientation="vertical">

        <include
            android:id="@+id/viewSignUpUserName"
            layout="@layout/include_signup_edittext" />

        <include
            android:id="@+id/viewSignUpEmail"
            layout="@layout/include_signup_edittext" />

        <include
            android:id="@+id/viewSignUpPassword"
            layout="@layout/include_signup_edittext" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/huge_padding"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFacebook"
                android:layout_width="@dimen/img_login_socail"
                android:layout_height="@dimen/img_login_socail"
                android:layout_marginRight="@dimen/very_huge_padding"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/imgGoogle"
                android:layout_width="@dimen/img_login_socail"
                android:layout_height="@dimen/img_login_socail"
                android:layout_marginRight="@dimen/huge_padding"
                android:src="@drawable/google_plus" />

            <ImageView
                android:id="@+id/imgTwitter"
                android:layout_width="@dimen/img_login_socail"
                android:layout_height="@dimen/img_login_socail"
                android:layout_marginRight="@dimen/huge_padding"
                android:src="@drawable/twitter" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/huge_padding"
        android:layout_marginLeft="@dimen/huge_padding"
        android:layout_marginRight="@dimen/huge_padding"
        android:background="@android:color/holo_red_dark"
        android:text="@string/get_started"
        android:textColor="@android:color/white" />

</RelativeLayout>