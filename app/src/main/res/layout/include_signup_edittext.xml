<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/edit_text_height"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/small_padding"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgTextIcon"
        android:layout_width="@dimen/img_edit_text"
        android:layout_height="@dimen/img_edit_text"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/small_padding"
        android:src="@drawable/mail" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_padding"
        android:layout_toRightOf="@+id/imgTextIcon">

        <EditText
            android:id="@+id/txtLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/app_name"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:text="@string/app_name" />

    </android.support.design.widget.TextInputLayout>


    <View
        android:id="@+id/viewActive"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_view"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/small_padding"
        android:background="@android:color/holo_red_dark" />

    <View
        android:id="@+id/viewInactive"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_view"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/small_padding"
        android:background="@android:color/darker_gray" />
</RelativeLayout>